@startuml ""


class Book {
    - String ISB;
    - String title;
    - date publicaion;
    - boolean available;
    - int stock;
    - Publisher publisher;
    - Category category;
}



class Category {
    - int ID;
    - String name;
    - List<Book> books;
}


class Publisher {
    - int ID;
    - String name;
    - List<Book> books;
}


class Client {
    - int ID;
    - String name;
    - String address;
    - String phoneNumber;
    - List<Loan> loans;

}

class Loan {
    - int ID;
    - int quantity;
    - date dateLoan;
    - date dateReturn;
    - Client client;
    - List<Book> books;

}

class Reservation {
    - int ID;
    - int quantity;
    - date dateReservation;
    - Client client;
    - List<Book> books;
}



' relatioships

Book "*" -- "1" Publisher: do
Book "*" -- "1" Category: contain
Book "*" -- "1" Loan: contain
Loan "*" -- "1" Client: do
Reservation "1" -- "1" Client: do
Reservation "1" -- "*" Book: contain



@enduml